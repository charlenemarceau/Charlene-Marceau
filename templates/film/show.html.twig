{% extends 'base.html.twig' %}

{% block title %}Film{% endblock %}

{% block body %}

<div class="container mt-5">
<div class="row justify-content-center">
    <div class="col-8 justify-content-center">
    
    <h1>Plus de détails sur le film {{ film.titre }}</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ film.titre }}</td>
            </tr>
            <tr>
                <th>Affiche du film</th>
                <td><div class="justify-content-center"><img src="{{ film.affiche }}" class="image"></div></td>
            </tr>
            <tr>
                <th>Récompense(s)</th>
                <td>{{ film.recompense }}</td>
            </tr>
            <tr>
                <th>Date de sortie</th>
                <td>{{ film.annee ? film.annee|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ film.synopsis }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('film_index') }}" class="btn btn-warning">Retour</a>

    <a href="{{ path('film_edit', {'id': film.id}) }}" class="btn btn-success">Editer</a>

    {{ include('film/_delete_form.html.twig') }}
    </div>
    </div>
</div>
{% endblock %}
