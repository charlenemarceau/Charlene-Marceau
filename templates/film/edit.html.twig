{% extends 'base.html.twig' %}

{% block title %}Edit Film{% endblock %}

{% block body %}
    <div class="container">
        <div class="col-8 justify-content-center">
    <h1 class="text-center mt-3">Modifier le film : <br>{{ film.titre }}</h1>
    {% for message in app.flashes ('success')%}
        <div class="alert alert-success my-3">
            {{ message }}
        </div>
            {% endfor %}
    {{ include('film/_form.html.twig', {'button_label': 'Update'}) }}

    {{ include('film/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{{parent()}}

<script>
const deleteform = document.querySelector('.deleteform');
deleteform.addEventListener('click',function(e) {
    e.preventDefault();
    if(confirm('Voulez-vous supprimer cette todo ?')){
        this.submit()
    }
});
</script>
{% endblock %}